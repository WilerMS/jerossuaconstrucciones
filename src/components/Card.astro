---
import Carousel from './Carousel'

interface Props {
	description: string,
  images: string[],
  title: string,
}

const { title, description, images } = Astro.props

---

<div class="service w-full aspect-[1.2] lg:aspect-[.85] center flex-col rounded-sm shadow overflow-hidden">
  <div class="w-full h-1/2">
    <Carousel {images} client:load />
  </div>
  <div class="h-[45%] w-full py-2 px-4">
    <h3 class="uppercase font-semibold text-lg">{title}</h3>
    <p class="text-gray-600 text-sm">{description}</p>
  </div>
</div>