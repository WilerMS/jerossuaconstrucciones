---
import Layout from '../layouts/Layout.astro';
import Carousel from '../components/Carousel'
import Footer from '../components/Footer.astro'
import Card from '../components/Card.astro';

const images = [
  "/images/hero_heating_03.jpg",
  "/images/services/24.webp",
  "/images/services/25.jpg",
  "/images/services/24.jpg",
  "/images/services/25.webp"
]

const services = [
    {
      id: '2',
      title: 'Reformas generales',
      description: 'Transformamos tu espacio con reformas integrales personalizadas. Desde renovaciones de cocinas y baños hasta la remodelación completa de viviendas.',
      images: [
        '/images/services/10.jpg',
        '/images/services/13.jpg',
        '/images/services/17.jpg',
        '/images/services/21.jpg',
        '/images/services/23.jpg',
      ]
    },
    {
      id: '1',
      title: 'Construcción de obras nuevas',
      description: 'Ya sea que estés buscando construir tu hogar ideal, un espacio comercial atractivo o un edificio de gran envergadura, nuestro equipo está capacitado y equipado para cumplir con tus requerimientos.',
      images: [
        '/images/services/7.jpg',
        '/images/services/8.jpg',
        '/images/services/3.jpg',
        '/images/services/4.jpg',
        '/images/services/5.jpg',
        '/images/services/6.jpg',
      ]
    },
    {
      id: '6',
      title: 'Cálculos estructurales',
      description: 'Maximiza la seguridad y eficiencia de tus proyectos con nuestros cálculos estructurales avanzados. Garantizamos estructuras sólidas y duraderas que cumplen con las más altas exigencias de la construcción.',
      images: [
        '/images/services/8.jpg',
        '/images/services/7.jpg',
        '/images/services/3.jpg',
      ]
    },
    {
      id: '4',
      title: 'Estudios de mecánicas de suelo',
      description: 'Aseguramos la integridad y estabilidad de tus construcciones con evaluaciones en mecánica de suelos, adaptando cada proyecto a las condiciones del terreno para garantizar una ejecución impecable.',
      images: [
        '/images/services/11.jpg',
        '/images/services/18.jpeg',
        '/images/services/22.jpg',
      ]
    },
    {
      id: '5',
      title: 'Plomería Electricidad y pintura',
      description: 'Transforma espacios con nuestro servicio integral de plomería, electricidad y pintura. Expertise y calidad se unen para ofrecerte soluciones completas, eficientes y estéticamente atractivas en cada detalle de tu proyecto.',
      images: [
        '/images/hero_heating_02.jpg',
        '/images/hero_heating_01.jpg',
        '/images/hero_heating_03.jpg',
      ]
    },
    {
      id: '3',
      title: 'Instalación de puertas y ventanas',
      description: 'Renueva tu entorno con nuestra instalación experta de puertas y ventanas, combinando funcionalidad y diseño para realzar la belleza y seguridad de tus espacios.',
      images: [
        '/images/hero_heating_02.jpg',
        '/images/hero_heating_01.jpg',
        '/images/hero_heating_03.jpg',
      ]
    },
  ]
---

<Layout
  title="Jerossua Construcciones" 
  description='"Expertos en construcción y reformas de viviendas con más de 20 años de experiencia. Transformamos tus espacios con calidad, innovación y atención personalizada. ¡Haz realidad la casa de tus sueños!'
>
  <section id="home" class="w-full h-screen flex justify-center flex-col">
    <div class="relative w-full h-full center">
      <Carousel images={images} client:load/>
      <div class="absolute md:w-[800px] md:h-[200px] z-10 text-center w-full h-[120px]">
        <h1 class="md:text-[4rem] leading-none font-bold text-white md:mb-7 shadow-text text-[2rem] mb-2.5">
          CONSTRUCCIONES EN REP. DOMINICANA
        </h1>
        <button class="text-white bg-[#d85427] font-bold rounded-full py-4 px-6 shadow-lg cursor-pointer transition-all duration-300 ease-in-out hover:scale-105">
          <a href="tel:346639130333" target="&quot;_blank&quot;" class="">Pide Presupuesto</a>
        </button>
      </div>
    </div>

    <div class="flex items-center justify-center bg-[#d85427] h-[150px]">
      <div class="p-2 lg:p-0 relative text-white w-full md:max-w-[1100px]">
        <div class="absolute top-4 left-2 lg:left-0 py-4 uppercase text-xs font-bold">Promociones</div>
        <div class="h-full flex justify-between items-center py-10 mt-2">
          <div class="text-2xl lg:text-4xl font-extrabold uppercase">
            <span>Oportunidad</span><br>
            <span>Inmobiliaria 2023 RD</span>
          </div>
          <a href="/promociones-inmobiliarias" class="group bg-white text-red-600 font-bold rounded-full py-2 px-6 shadow-lg flex items-center cursor-pointer">
            <span>Conoce más..</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6 ml-2">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <section id="services" class="w-full m-auto md:max-w-[1100px] mt-[60px] p-2 lg:p-0">
    <h2 class="text-2xl mt-6 mb-3 uppercase">NUESTROS SERVICIOS</h2>
    <hr>
    <br>
    <!-- LO SIGUIENTE SE GENERA EN main.js -->
    <div id="services-items" class="grid grid-cols-1 lg:grid-cols-3 gap-[30px]">
      {services.map(service => (
        <Card
          title={service.title} 
          description={service.description} 
          images={service.images} 
        />
      ))}
    </div>
  </section>

  <section id="gallery" class="w-full m-auto md:max-w-[1100px] mt-[60px] p-2 lg:p-0">
    <h2 class="text-2xl mt-6 mb-3 uppercase">GALERÍA DE ÚLTIMOS PROYECTOS</h2>
    <hr>
  </section>

  <Footer />
</Layout>